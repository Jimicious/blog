<div class="container-fluid">
  <div class="row-fluid">
    <div class="span4">
      <table class="table table-hover">
		  <tr>
		    <th>Name</th>
		    <th>Title</th>
		    <th>Content</th>
		    <th></th>
		    <th></th>
		    <th></th>
		  </tr>
		 
		  <% @posts.each do |post| %>
		    <tr onmouseover="this.style.cursor='pointer';"
				onclick="location.href='<%= url_for post %>';"
				style="cursor: pointer;">
		      <td><%= post.name %></td>
		      <td><%= post.title %></td>
		      <td><%= post.content[0..20] %></td>
		    </tr>
		  <% end %>
		</table>
    </div>
    <div class="verticalLine span8">
		<p>
		  <b>Name:</b>
		  <%= @post.name %>
		</p>
		 
		<p>
		  <b>Title:</b>
		  <%= @post.title %>
		</p>
		 
		<p>
		  <b>Content:</b>
		  <%= @post.content %>
		</p>
		 
		<p>
		  <b>Tags:</b>
		  <%= join_tags(@post) %>
		</p>
		 
		<h2>Comments</h2>
		<%= render @post.comments %>
		
		<h3>Add a comment:</h3></br>
		<%= render "comments/form" %>
    </div>
  </div>
</div>
 
 
<%= link_to 'Edit Post', edit_post_path(@post) %> |
<%= link_to 'Back to Posts', posts_path %> |