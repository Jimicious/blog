<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3">
      <!--Sidebar content-->
    </div>
    <div class="span8">
		<p>
		  <b>Name:</b>
		  <%= @post.name %>
		</p>
		 
		<p>
		  <b>Title:</b>
		  <%= @post.title %>
		</p>
		 
		<p>
		  <b>Content:</b>
		  <%= @post.content %>
		</p>
		 
		<p>
		  <b>Tags:</b>
		  <%= join_tags(@post) %>
		</p>
		 
		<h2>Comments</h2>
		<%= render @post.comments %>
		

		<div class="row">
			<div class="span6 offset3">
				<h3>Add a comment:</h3></br>
				<%= render "comments/form" %>
			</div>
		</div>
    </div>
  </div>
</div>
 
 
<%= link_to 'Edit Post', edit_post_path(@post) %> |
<%= link_to 'Back to Posts', posts_path %> |